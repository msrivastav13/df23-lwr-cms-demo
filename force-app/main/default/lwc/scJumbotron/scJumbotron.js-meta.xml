<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>SC Site Jumbotron</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                name="variant"
                label="Variant"
                type="String"
                datasource="transparent,primary-dark"
                default="transparent"
            />
            <property
                name="title"
                type="String"
                label="Title"
                default=""
            />
            <property
                name="buttonLabel"
                type="String"
                label="Button Label"
                default="Learn More"
            />
            <property
                name="buttonUrl"
                type="String"
                label="Button URL"
                default="#"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>